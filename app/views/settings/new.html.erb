<div class="page-header">
  <h1>Create New Repo Settings</h1>
</div>
<input type="hidden" name="fetch-repo-url" value="<%= fetch_repo_settings_url %>" />

<div class="col-md-8">
  <div class="input-group">
    <span class="input-group-addon">Repo</span>
    <input type="text" class="form-control" placeholder="meinac/easy_redis" name="repo">
    <span class="input-group-btn">
      <button class="btn btn-default" type="button" id="fetch-repo-button">Fetch</button>
    </span>
  </div>
  
  <div class="panel panel-default" style="margin-top: 5px; display: none; padding: 5px;" id="form-data">
    <div class="panel-body">
      <h3 id="repo-name"></h3>
    </div>
    <div class="input-group">
      <span class="input-group-addon">Keywords</span>
      <input type="textfield" class="form-control" id="keywords-holder"/>
    </div>
    <%= form_for :setting, url: settings_path do |f|%>
      <%= f.hidden_field :repository_id %>
      <div id="keywords-area"></div>
      <div id="labels-area"></div>
      <%= f.select :for, [:issues, :pull_requests], {}, {class: "form-control", style: "margin-top: 10px; width: 150px;"} %>

      <%= f.submit class: "btn btn-default", style: "margin: 10px;", id: "submit-setting" %>
    <% end %>
  </div>
</div>